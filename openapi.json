{
  "openapi": "3.0.1",
  "info": {
    "title": "Xuemingtao Structure Plugin",
    "version": "1.0.0",
    "description": "结构关键词分析插件：输入“薛明涛”等关键词，返回结构动力模型的分析反馈。"
  },
  "servers": [
    {
      "url": "https://structure-api-render.onrender.com"
    }
  ],
  "paths": {
    "/predict": {
      "post": {
        "summary": "关键词识别",
        "operationId": "predictStructure",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "user_input": {
                    "type": "string"
                  }
                },
                "required": ["user_input"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "识别成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}
